# Copy this file to docker/.env.production and fill in production settings before running docker compose.
# Values here are safe defaults or placeholders. Replace anything marked with <>.

BACKEND_PORT=8000
FRONTEND_PORT=8080

# Frontend build-time configuration
DATABUTTON_PROJECT_ID=vacare-production
DATABUTTON_EXTENSIONS=[{"name":"firebase-auth","version":"1","config":{"firebaseConfig":{"apiKey":"<firebase-api-key>","authDomain":"<project>.firebaseapp.com","projectId":"<project>","storageBucket":"<project>.appspot.com","messagingSenderId":"<sender-id>","appId":"<firebase-app-id>"}}}]
VITE_API_URL=/routes
VITE_WS_API_URL=

# Backend secrets (never commit real values)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"<project>","private_key_id":"<key-id>","private_key":"-----BEGIN PRIVATE KEY-----\\n<base64-encoded-private-key>\\n-----END PRIVATE KEY-----\\n","client_email":"firebase-adminsdk@<project>.iam.gserviceaccount.com","client_id":"<client-id>","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk%40<project>.iam.gserviceaccount.com"}
OPENAI_API_KEY=

# Optional Google Cloud configuration
GOOGLE_APPLICATION_CREDENTIALS=
